<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_secimler"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/baslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textColor="@color/textColorX"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/whopurchased"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/textColorX" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="6dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_kredili">
                    <ImageView
                        android:id="@+id/im1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/satinalan"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        style="@style/color_kupon_tint"/>
                    <TextView
                        android:id="@+id/satinalan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_color_kupon"
                        android:layout_toRightOf="@id/im1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_kredili">
                    <ImageView
                        android:id="@+id/im2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/secim_oran"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        style="@style/color_kupon_tint"/>
                    <TextView
                        android:id="@+id/oran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_color_kupon"
                        android:layout_toRightOf="@id/im2"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_kredili">
                    <ImageView
                        android:id="@+id/im3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/kredili_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        style="@style/color_kupon_tint"/>
                    <TextView
                        android:id="@+id/kredi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_color_kupon"
                        android:layout_toRightOf="@id/im3"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_kredili">
                <TextView
                    android:id="@+id/tarihsaat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_color_kupon"
                    android:textSize="12sp"
                    android:textStyle="italic|bold"
                    android:layout_centerVertical="true"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:id="@+id/durum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_color_kupon"
                    android:textSize="12sp"
                    android:layout_toLeftOf="@id/status"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:gravity="right|center"
                    android:paddingRight="10dp"/>
                <ImageView
                    android:id="@+id/status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>

